rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Profile Images
    match /profile_images/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // OOTD Images
    match /ootd/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Homepage Assets (Hero, Announcement, etc.)
    match /homepage/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Product Images
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
